<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/homeResultCard"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/homeResultImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:translationZ="1dp"
        android:layout_gravity="center"
        app:civ_border="false"
        app:civ_shadow_radius="10dp"
        app:civ_shadow_color="@color/grey_color_high"
        app:civ_shadow_gravity="bottom"
        app:civ_shadow="true"
        android:src="@drawable/profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-120dp"
        android:paddingTop="130dp"
        android:orientation="vertical"
        android:background="@drawable/white_bg">

        <TextView
            android:id="@+id/homeShopNameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:text="Cutting \nStyle Color"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/homeServicePriceTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@color/purple_500"
            android:textStyle="bold"
            android:text="Price Here" />

    </LinearLayout>

</LinearLayout>